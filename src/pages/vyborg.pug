extends ./../layouts/main

block variables
    - let pageTitle = 'Выведение из запоя в Выборге';
    - let breadcrumbsHomepage = 'Главная / ';
    //- - let breadcrumbsText_1 = 'Статьи / ';
    //- - let breadcrumbsText_2 = 'О приеме / ';
    - let breadcrumbsText_3 = 'Выведение из запоя в Выборге';

    - let breadcrumbsHomepageLink = 'index.html';
    //- - let breadcrumbsLink_1 = 'articles.html';
    //- - let breadcrumbsLink_2 = 'reception.html';

block content
    .wrap-feedback
    .wrapper
        include ./../components/sections/header/header.pug
        //- include ./../components/bem-blocks/bread-crumbs/bread-crumbs.pug
        include ./../components/sections/about/about-vyborg.pug
        include ./../components/bem-blocks/bread-crumbs/bread-crumbs.pug 
        section.advantages-appeal.advantages-region
            .container
                h2.section__title Выведение из запоев и лечение похмельного состояния в Выборге
                .info
                    .info__txt
                        p Для лечения алкогольной зависимости необходимо прежде  всего вывести из запоя и прекратить 
                            |запойное состояние пациента. Для этого надо провести лечение с применением инфузионной терапии, 
                            |применяя капельницу. Она помогает быстро улучшить состояние больного, избавиться от 
                            |постинтоксикационного синдрома, похмельного или абстинентного синдрома. 
                            |Капельница позволит снизить эффекты отравления алкоголем.
                        p При применении капельницы врач-нарколог центра «Детокс-Мед» может снизить или совсем убрать 
                            |последствия длительного злоупотребления:  тревога, беспокойство, бессонница, тошнота, головная 
                            |боль, головокружение.
                        p Главная задача врача при выведении из запоя является снижение явлений абстиненции, восстановление 
                            |нормального сердцебиения, артериального давления, которые могут составлять угрозу для жизни.
                    .info__img
                        img(src="./wp-content/themes/detox-med/assets/img/kapelnicy.jpg", alt="Выведение из запоев и лечение похмельного состояния")
        section.form.form-prices--stock.form-region
            .container
                .form
                    h2.form__title Только в этом месяце выведение из запоя от 1799 рублей!
                    h3 Заполните форму, чтобы узнать подробности.
                    form
                        input._req.phone-input(type="text" name="user-phone" placeholder="+ 7 ___ - __ - __" required="required")
                        input._req(type="text" name='user-name' placeholder="Ваше имя" required="required")
                        button.btn-send.btn-red Заказать звонок
                        .form__policy
                            input._req.chec#chec(type="checkbox" required="required" checked)
                            label.form-chec(for="chec") Вы соглашаетесь с 
                                a(href="#!" target="_blank") условиями обработки персональных данных
        include ./../components/sections/about-advantages/about-advantages3.pug
        include ./../components/sections/questions/questions-region.pug 
        include ./../components/sections/form-home/form-region.pug 
        include ./../components/sections/publications/publications-region2.pug
        include ./../components/sections/footer/footer.pug 